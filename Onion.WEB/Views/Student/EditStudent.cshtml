@model OnionArhitectura.ViewModels.StudentViewModel

@{
    ViewBag.Title = "Edit Student";
}

<div class="bg-dark text-center pt-5 pb-4 form-border">
    <h3 class="text-white mb-4"><i class="fa-solid fa-user-graduate monday-school-color-blue"></i> <span class="monday-school-color-gradient">Редактирование студента</span></h3>
    <form asp-action="EditStudent" asp-controller="Student" asp-anti-forgery="true">
        <div asp-validation-summary="ModelOnly" class="text-validation-error mb-4"></div>
        <div class="form_row mb-3">
            <label class="col-5">
                <input type="text" class="form-control" asp-for="FirstName" placeholder="Введите имя студента...">
                <span asp-validation-for="FirstName" class="text-validation-error" />
            </label>
        </div>
        
        <div class="form_row mb-3">
            <label class="col-5">
                <input type="text" class="form-control" asp-for="LastName" placeholder="Введите фамилия студента...">
                <span asp-validation-for="LastName" class="text-validation-error" />
            </label>
        </div>
        
        <div class="form_row mb-3">
            <label class="col-5">
                <input type="text" class="form-control" asp-for="Phone" placeholder="+996">
                <span asp-validation-for="Phone" class="text-validation-error" />
            </label>
        </div>
        
        <div class="form_row mb-3">
            <label class="col-5">
                <textarea class="form-control" asp-for="Description" rows="3" placeholder="Введите описание студента..."></textarea>
                <span asp-validation-for="Description" class="text-validation-error" />
            </label>
        </div>
        
        <div class="form_row mb-3">
            <label class="col-5">
                <input type="number" class="form-control" asp-for="GroupId" placeholder="Укажите ID группы...">
                <span asp-validation-for="GroupId" class="text-validation-error" />
            </label>
        </div>
        <button type="submit" class="btn btn-outline-light mb-3 w-25"><strong>Сохранить</strong></button>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}