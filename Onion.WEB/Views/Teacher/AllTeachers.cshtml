@model IEnumerable<OnionArhitectura.ViewModels.TeacherViewModel>

<h5>Список учителей</h5>

<a asp-action="AddTeacher" class="btn btn-primary">Добавить учителя</a>

<div class="mt-3">
    <table class="table table-striped">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Урок</th>
            <th>Филиал</th>
            <th class="monday-school-color-blue">Действия</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Any())
        {
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.Id</td>
                    <td>@teacher.FirstName</td>
                    <td>@teacher.LastName</td>
                    <td>@teacher.LessonNameId</td>
                    <td>@teacher.BranchId</td> 
                    <td>
                        <a asp-action="EditTeacher" asp-route-id="@teacher.Id" class="btn btn-warning btn-sm">Изменить</a>
                        <a asp-action="DeleteTeacher" asp-route-id="@teacher.Id" class="btn btn-danger btn-sm"><i class="fa-solid fa-user-xmark"></i> Удалить</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td class="text-center">В данный момент учителя нет.</td>
            </tr>
        }
        </tbody>
    </table>
</div>